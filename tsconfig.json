{
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "allowJs": true,
    // "checkJs": true,
    // "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}